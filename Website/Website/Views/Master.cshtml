@inherits UmbracoViewPage<Website.UI.BL.DocumentTypes.Page>
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>

    <!-- Meta tags -->
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <title>@Model.Title</title>

    <!-- Fonts -->
    <link href="//fonts.googleapis.com/css?family=Merriweather:400,700,300,900" rel="stylesheet" type="text/css">
    <link href="//fonts.googleapis.com/css?family=Lato:300,400,700,900" rel="stylesheet" type="text/css">

    @*@Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/custom")*@
    <script type="text/javascript" src="~/Scripts/jquery-1.10.2.js"></script>
    <script type="text/javascript" src="~/Scripts/Custom/listing.js"></script>

    <!-- HTML5 shim and Respond.js for IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
      <script src="//oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js"></script>
      <script src="//oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->

    <script>
        (function (i, s, o, g, r, a, m) {
            i['GoogleAnalyticsObject'] = r; i[r] = i[r] || function () {
                (i[r].q = i[r].q || []).push(arguments)
            }, i[r].l = 1 * new Date(); a = s.createElement(o),
            m = s.getElementsByTagName(o)[0]; a.async = 1; a.src = g; m.parentNode.insertBefore(a, m)
        })(window, document, 'script', '//www.google-analytics.com/analytics.js', 'ga');

        ga('create', 'UA-70022206-1', 'auto');
        ga('send', 'pageview');
    </script>

    @Styles.Render("~/Content/css")

    @if (IsSectionDefined("Head"))
    {
        @RenderSection("Head");
    }
</head>

<body style="background-image: @(Model.HasBackgroundImage ? string.Format("url({0})", Model.GetBackGroundImageUrl(Umbraco)) : "none")">
    
    <!-- Temporary display -->
    @{        
        var beers = Umbraco.TypedContentAtXPath("//Beer");
        IPublishedContent latestAdded = null;
        foreach (var beer in beers)
        {
            if (latestAdded == null || beer.CreateDate > latestAdded.CreateDate)
            {
                latestAdded = beer;
            }
        }
    }
    <div style="position: absolute;
        right: 8px;
        top: 8px;
        color: white;
        font-size: 0.8em;">
        Total Beers: @beers.Count()<br />
        Last Added: @latestAdded.Name
    </div>

    @Html.Partial("_Navigation", Model)
    @RenderBody()

    <div id="overlay"></div>
</body>
</html>